{
  "Logging": {

    "Files": {

      "TraceLog": {
        "Path": "logs/trace.txt",
        "RollInterval" : "Hour",
        "FormatterOptions": {
          "IncludeScopes": false,
          "SingleLine": true,
          "EmptyLineBetweenMessages": false,
          "TimestampFormat": "yyyy-MM-dd h:mm tt",
          "UseUtcTimestamp": true
        },
        "logLevel": {
          "Default": "Trace",
          "Microsoft": "Warning"
        }
      },


      "ErrorLog": {} // defined in code 
    },

    "File": {
      "Path": "logs/sample.txt",

      "formatterOptions": {
        "IncludeScopes": false,
        "SingleLine": false,
        "EmptyLineBetweenMessages": true,
        "TimestampFormat": "yyyy-MM-dd h:mm tt",
        "UseUtcTimestamp": false
      }
    }


  }
}
